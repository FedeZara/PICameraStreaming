<Window x:Class="client_app.WindowMAC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client_app"
        mc:Ignorable="d"
        Title="WindowMAC" Height="250" Width="350">
    <Grid>
        <Label x:Name="infoLabel" Width="300" Height="25" VerticalAlignment="Top" Margin="15" TextBlock.TextAlignment="Center"></Label>
        <TextBox x:Name="MACadd" Width="300" Height="40" TextAlignment="Center" Text="XX-XX-XX-XX-XX-XX" VerticalContentAlignment="Center" FontSize="20"/>
        <Button x:Name="MacButton" Content="Imposta MAC" Click="Click" ClickMode="Press" RenderTransformOrigin="0.478,0.516" Margin="108,135,109.333,57.667" />
        <Label Content="Inserisci il MAC del dispositivo a cui ti vuoi connettere" HorizontalAlignment="Left" Margin="21,57,0,0" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
